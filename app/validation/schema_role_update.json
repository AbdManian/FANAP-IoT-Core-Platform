{
    "$schema": "http://json-schema.org/schema#",
    "title": "Role Update",
    "type":"object",
    "properties": {
        "name": {
            "type":"string"
        },
        "description":{
            "type":"string"
        },
        "forceUpdate": {
            "type":"boolean"
        },
        "attributePermissions": {
            "type":"array",
            "items": {
                "type":"object",
                "properties": {
                    "attributeTypeName":{
                        "type":"string"
                    },
                    "permission": {
                        "type":"string",
                        "enum":[
                            "N",
                            "R",
                            "RW",
                            "W"
                        ]
                    }
                },
                "required": [
                    "attributeTypeName",
                    "permission"
                ]

            }
        }
    }
}