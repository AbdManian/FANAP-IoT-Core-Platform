{
    "$schema": "http://json-schema.org/schema#",
    "title": "Role Add",
    "type":"object",
    "properties": {
        "name": {
            "type":"string"
        },
        "deviceTypeId":{
            "type":"string"
        },
        "description":{
            "type":"string"
        },
        "attributePermissions": {
            "type":"array",
            "minItems":1,
            "items": {
                "type":"object",
                "properties": {
                    "attributeTypeName":{
                        "type":"string"
                    },
                    "permission": {
                        "type":"string",
                        "enum":[
                            "N",
                            "R",
                            "RW",
                            "W"
                        ]
                    }
                },
                "required": [
                    "attributeTypeName",
                    "permission"
                ]

            }
        }
    },
    "required": [
        "name",
        "deviceTypeId",
        "attributePermissions"
    ]
}